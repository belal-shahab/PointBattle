@page "/about"
@inject LocalizationService Loc
@inject NavigationManager Navigation
@implements IDisposable

<div class="about-container">
    <div class="back-button-container">
        <button class="back-button" @onclick="BackToHome">
            <span>‚Üê</span>
            <LocalizedText Key="Back" />
        </button>
    </div>

    <h2><LocalizedText Key="About" /></h2>
    
    <div class="about-content">
        <div class="contact-info">
            <h3><LocalizedText Key="About" /></h3>
            <div class="contact-item">
                <span class="contact-label"><LocalizedText Key="Name" />:</span>
                <span class="contact-value">Belal Shahab</span>
            </div>
            <div class="contact-item">
                <span class="contact-label"><LocalizedText Key="Phone" />:</span>
                <span class="contact-value">07505621165</span>
            </div>
            <div class="contact-item">
                <span class="contact-label"><LocalizedText Key="Email" />:</span>
                <span class="contact-value">bb6704344@gmail.com</span>
            </div>
        </div>
        
        <div class="app-description">
            <h3><LocalizedText Key="AboutTheApp" /></h3>
            <p><LocalizedText Key="AboutTheAppDescription" /></p>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        Loc.OnLanguageChanged += OnLanguageChanged;
    }

    private void OnLanguageChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void BackToHome()
    {
        Navigation.NavigateTo("/");
    }

    public void Dispose()
    {
        Loc.OnLanguageChanged -= OnLanguageChanged;
    }
}