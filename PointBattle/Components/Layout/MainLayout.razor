@inherits LayoutComponentBase
@using PointBattle.Services
@using PointBattle.Components
@inject LocalizationService Loc
@inject DarkModeService DarkMode
@inject IJSRuntime JSRuntime
@implements IDisposable

<div class="page @(Loc.IsRightToLeft ? "rtl-layout" : "")" data-theme="@(DarkMode.IsDarkMode ? "dark" : "light")">
    <div class="sidebar">
        <NavMenu />
    </div>
    <main>
        <div class="top-row">
            <div class="top-row-content">
                <div class="app-brand">
                    <LocalizedText Key="AppName" />
                </div>
                <div class="top-row-controls">
                    <DarkModeToggle />
                    <LanguageSwitcher />
                </div>
            </div>
        </div>
        <article class="content">
            @Body
        </article>
    </main>
</div>

@code {
    protected override void OnInitialized()
    {
        Loc.OnLanguageChanged += OnLanguageChanged;
        DarkMode.OnDarkModeChanged += OnDarkModeChanged;
        Console.WriteLine($"MainLayout initialized with language: {Loc.CurrentLanguage}");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await Loc.InitializeAsync();
                await DarkMode.InitializeAsync();
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error in OnAfterRenderAsync: {ex.Message}");
            }
        }
    }

    private void OnLanguageChanged()
    {
        try
        {
            Console.WriteLine("Language changed event received in MainLayout");
            InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in OnLanguageChanged: {ex.Message}");
        }
    }

    private void OnDarkModeChanged()
    {
        InvokeAsync(StateHasChanged);
    }
    
    public void Dispose()
    {
        Loc.OnLanguageChanged -= OnLanguageChanged;
        DarkMode.OnDarkModeChanged -= OnDarkModeChanged;
    }
}